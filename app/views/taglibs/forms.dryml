<def tag="form" for="FirbAnastaticaPage">
  <form merge param="default">
    <error-messages param/>
    <image-zone-select />
    <field-list fields="page_position, title" param/>
	<label for="select_list"><ht key="firb_anastatica_pages.page_to_book">Attach to book</ht></label>
	<removeable-books />
	<% book_hash = {} ; this.unattached_books.each { |b| book_hash[b.name] = b.to_uri.safe_encoded } %>
	<unless test="&book_hash.empty?">

		<% book_hash["Don't attach"] = '' %>
		<select-menu options="&book_hash" id="anastatica_page_attach" name="attach_book" />
	</unless>
    <div param="actions">
		<submit label="#{ht 'firb_anastatica_pages.actions.save', :default=>['Save']}" param/><or-cancel param="cancel"/>
    </div>
  </form>
</def>


<def tag="form" for="FirbPiTextCard">
    <form merge param="default" multipart="true">
        <error-messages param/>
        
        <%= I18n.t("firb_text_page.title") %>: <input type="text" name="firb_pi_text_card[title]" value="&this.title"/><br />
        <br />
        <%= I18n.t("firb_text_page.transcription_file") %>: <input type="file" name="firb_pi_text_card[file]"/><br />
        <br />
        <%= I18n.t("firb_anastatica_pages.model_name") %>: <single-connection attribute="anastatica" type="FirbAnastaticaPage" options="&anastatiche_select" />
        <br />
        <%= I18n.t("firb_text_page.image_zones") %> :
        <image-zones-edit />
        <br />
        <div id="non-illustrated-memory-depictions">
            <%= I18n.t("firb_text_page.non_ill_mem_dep") %> :
            <non-illustrated-memory-depiction-edit />
        </div>
        <br />
        <div id="firb-notes">

            <if test="&this.has_notes?">
                <repeat with="&this.notes">
                    <div class='firb-note'>
                        <textarea rows="4" cols="50" name='firb_pi_text_card[note][<%= this.uri %>]'><%= "#{this.content}" %></textarea>
                        <span class='firb-remove-note'><%= I18n.t("firb_text_page.remove_note") %></span>
                    </div>
                </repeat>
            </if>
        </div>

        <span id="firb-add-note" onclick="textPageAddNote('firb_pi_text_card')">Add a note</span>

        <input:parafrasi for='text' value='&this.parafrasi' />
        <label for='firb_pi_text_card[parafrasi]'><%= I18n.t("firb.parafrasi") %> </label><br />

        <submit label="Save" /><or-cancel with="&FirbPiTextCard" />
    </form>
</def>

