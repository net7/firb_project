<%
  # Parameters:
  # @items: it has #bibliograpy_items
  # @title: widget field title

  title ||= 'Fonti'

  content = (items.to_a.map do |item|
      content_tag :li, boxview_link_for_object(item, {:title => item.bibliography_item.name, :text => item.boxview_data[:title]})
  end.join(''))

%>

<%=
    boxview_widget_field(title, content_tag(:ul, content))
 
%>