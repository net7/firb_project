<%= boxview_widget 'Scheda', :class => "TextWidget widget_draggable" do |w|


  note_tipografiche = [@resource.publisher, @resource.date].compact.join(', ')

  field_to_show =  {"Autore" => @resource.author, "Titolo" => @resource.title, "Note tipografiche" => note_tipografiche, "Abstract" => @resource.abstract, "Risorsa esterna" => @resource.external_url, 'DOI' => @resource.doi}


    field_to_show.each do |k,v|

    w.content boxview_widget_field(k, v) if v.present?
  end

  


end %>



