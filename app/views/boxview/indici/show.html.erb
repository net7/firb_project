<%= 
    boxview_widget 'Indice', :class => "index widget_draggable" do |w|
        w.content "<ul>"
        @items.each do |i|
          unless i.nil?
            data = i.boxview_data()
            w.content render :partial => '/boxview/shared/index_item', 
                     :locals => {:title => boxview_link_for_object(i), :description => data[:description]}
          end
        end
        w.content "</ul>"
    end
%>