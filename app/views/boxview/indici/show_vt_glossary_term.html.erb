<%= boxview_widget "Indice", :class => "index widget_draggable" do |w|
  w.content "<ul>"
  @search.facets.first.rows.each do |term|
    # name.count should return the incidence count for this name.
    w.content render :partial => '/boxview/shared/index_item', 
                     :locals => {:title => boxview_link("/boxview/indici/vt_letters_by_glossary_term?term=#{term.value.to_s}&glossary=#{@glossary}",
                                                        term.value.to_s,
                                                        "Lettere contenenti #{term.value.to_s}",
                                                        "index_letters_by_glossary_term_#{URI.escape term.value.to_s}",
                                                        :index),
                                 :description => ""}
  end
  w.content "</ul>"
end
%>
