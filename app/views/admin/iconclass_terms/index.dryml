<index-page>

    <heading:>
        <h3><ht key="#{model.name.pluralize.tableize}.model_name_plural" /></h3>
    </heading:>
	
	<new-link: replace>
	    <% s = I18n.t("#{model.name.pluralize.tableize}.actions.new") %>
	    <%= link_to "<img src='/images/icons/picture_add.png'> #{s}", url_for(:action => :new) %>
	</new-link:>

    <count:>
        <img src='/images/icons/pictures.png' /> <ht key="#{model.name.pluralize.tableize}.count" count="&this.total_entries" />
    </count:>
</index-page>