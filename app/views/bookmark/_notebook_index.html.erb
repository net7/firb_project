<div>
    <% notebook_index.each do |nb| %>
    <div class='widgetField'>
        <span class='field_title collapsed'>Title: <%= nb['title'] %></span>
        <div class='field_content collapsed'>
            <ul>
                <li>uri: <%= nb['uri'] %></li>
                <li>Author: <%= nb['author'] %></li>
                <li>Note: <%= nb['note'] %></li>
                <li>Subscribers #: <%= nb['subscribers'] %></li>
                <li>Bookmarks #: <%= nb['bookmarks'].length %></li>
                <li>Public: <%= if nb['public'] then "Si" else "No" end %> </li>
                <li><a class='myDoni' href="#">Condividi</a></li>
                <li><a class='myDoni' href="#">Pubblica</a></li>
                <li><a class='myDoni' href="#">Cancella</a></li>
                <li><a class='myDoni' href="boxViewer.php?method=myDoniGetNotebook&lang=it&resource=<%= Base64.encode64(nb['uri']) %>">Apri questo bookmark</a></li>
            </ul>
        </div>
    </div>
    <%  end %>    

</div>