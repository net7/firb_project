<% 
    if my.length > 0 
        cl = 'expanded'
    else
        cl = 'collapsed'
    end
%>

<div class='widget myDoni'>

    <div class='widgetHeader'>
        <% if my.length > 0 %>
            <h3 class='widgetHeaderTitle'>I miei notebook</h3>
        <% else %>
            <h3 class='widgetHeaderTitle'>Nessun mio notebook</h3>
        <% end %>
        <div class='widgetHeaderTools'>
            <p class='collapse'><a class='<%= cl %>' href='#' title='Collapse'>Collapse</a></p>
    	</div>
    </div>
    <div class='widgetContent <%= cl %>'>
        <% if my.length > 0 %>
            <%= render :partial => '/bookmarks/notebook_and_bookmarks.html', :object => my %>
        <% end %>
    </div>


